<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toStartOf="@+id/player_currency_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Player name" />

    <TextView
        android:id="@+id/player_currency_amount"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/player_name"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/player_playtime"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/player_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Currency amount" />

    <TextView
        android:id="@+id/player_playtime"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Playtime" />
</androidx.constraintlayout.widget.ConstraintLayout>